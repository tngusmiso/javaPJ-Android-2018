<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_schedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/rlDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="DEC"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/tvMonth"
                android:text="25"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMonth"
                android:text="18:00" />

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMonth"
                android:layout_toRightOf="@id/tvStartTime"
                android:layout_marginHorizontal="5dp"
                android:text="-"/>

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMonth"
                android:layout_toRightOf="@id/tvText"
                android:text="20:30" />
        </RelativeLayout>

<RelativeLayout
    android:id="@+id/rlContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/rlDate"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/tvSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="크리스마스 파티"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSchedule"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:text="서울시 서초구 삼성동 코엑스 SM타운 길어지면 어떻게 되나 한번 살펴볼까"/>
</RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>